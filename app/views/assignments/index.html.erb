 <h1> Assignment list </h1>

         <% @assignments.each do |assignment| %>
          
         <h3>Assignment: <%= link_to assignment.title, assignments_path(assignment.student, assignment.subject) %> | Subject: <%= assignment.subject.name %> </h3>
           <h4> Student: <%= link_to assignment.student.name, students_path %> Grade: <%= assignment.student.grade %></h4>
   
   <ol>   
       <li> Due Date: <%= assignment.date %> | Completed? <%= assignment.completed %></li>
       <li> Question/Comments: <%= assignment.question %></li>
        
   </ol>  
        <hr>
    <% end %>
